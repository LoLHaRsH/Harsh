#include<iostream>
#include<algorithm>
#include<string>
#include<vector>
using namespace std;


struct PersonalRecord{
    string name;
    string dob;
    string telephone;

    bool operator < (const PersonalRecord & other) const{
        return name<other.name;
    }

    void display() const{
        cout<<"Name : "<<name<<", Dob : "<<dob<<", telephone : "<<telephone<<endl;
    }
};

void searchRecord(const vector<PersonalRecord>&records, const string& searchName){
    for(const auto& record : records){
        if(record.name == searchName){
            cout<<"Record found: \n";
            record.display();
            return;
        }
    }
    cout<<"Record not found.\n";
}

int main(){
    vector<PersonalRecord> records;

    int n;
    cout<<"Enter no. of records : ";
    cin>>n;
    cin.ignore();

    for(int i=0; i<n; ++i){
        PersonalRecord record;
        string name, dob, telephone;
        cout<<"\nEnter name: ";
        getline(cin,name);

        cout<<"\nEnter date of birthdate: ";
        getline(cin, dob);

        cout<<"\nEnter telephone number: ";
        getline(cin,telephone);

        record.name = name;
        record.dob = dob;
        record.telephone = telephone;

        records.push_back(record);
    }
    cout << "Personal Records (Before Sorting):\n";
    for (const auto& record : records) {
        record.display();
    }

    sort(records.begin(), records.end());

    cout << "\nPersonal Records (After Sorting):\n";
    for (const auto& record : records) {
        record.display();
    }
    string searchName;
    cout<<"\nEnter the name to search: ";
    getline(cin, searchName);
    searchRecord(records, searchName);
}
