#include<iostream>
#include<graphics.h>
#include<math.h>
using namespace std;

void drawcircle(int xc, int yc, int r)
{
	int x=0;
	int y=r;
	int P=3-2*r;
	
	while(x<=y)
	{
		putpixel(xc+x,yc+y,7);
		putpixel(xc-x,yc+y,7);
		putpixel(xc+x,yc-y,7);
		putpixel(xc-x,yc-y,7);
		
		putpixel(xc+y,yc+x,7);
		putpixel(xc-y,yc+x,7);
		putpixel(xc+y,yc-x,7);
		putpixel(xc-y,yc-x,7);
		
		if(P < 0)
		{
			P+=4*x+6;
		}
		else
		{
			P+=4*(x-y)+10;
			y--;
		}
		x++;
	}
}

void DDA(int x1,int y1, int x2, int y2)
{
	int dx=x2-x1;
	int dy=y2-y1;
	int steps=abs(dx)>abs(dy)?abs(dx):abs(dy);
	
	float xinc=dx/(float)steps;
	float yinc=dy/(float)steps;
	float x=x1;
	float y=y1;
	
	for(int i=0;i<=steps; i++)
	{
		putpixel(round(x),round(y),WHITE);
		x+=xinc;
		y+=yinc;
	}
}

int main()
{
	int xc,yc,r;
	cout<<"Enter coordinates of the center of the circle (x,y) and radius: ";
	cin>>xc>>yc>>r;
	int gd=DETECT,gm;
	initgraph(&gd,&gm,NULL);
	drawcircle(xc,yc,r);
	int x1=xc,y1=yc-r;
	int x2=xc-r*sqrt(3)/2, y2=yc+r/2;
	int x3=xc+r*sqrt(3)/2, y3=yc+r/2;
	DDA(x1,y1,x2,y2);
	DDA(x2,y2,x3,y3);
	DDA(x3,y3,x1,y1);
	drawcircle(xc,yc,r/2);
	
	getch();
	closegraph();
	return 0;
}
