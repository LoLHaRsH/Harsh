#include <iostream>
#include <limits>
#include <string>
using namespace std;


class complex{
    double real;
    double imag;

public:
    complex(){
        real=0;
        imag=0;
    }

    friend ostream&  operator << (ostream &, const complex & d){
        cout<<d.real<<" + "<<d.imag<<"i"<<endl;
        return cout;
    }

    friend istream& operator >> (istream & in, complex& c){
        in>>c.real>>c.imag;
        return in;
    }

    complex operator + (complex c1){
        complex temp;
        temp.real = real+c1.real ;
        temp.imag = imag+ c1.imag;
        return temp;
    }

    complex operator *(complex c2){
        complex temp;
        temp.real = real* c2.real - imag*c2.real;
        temp.imag = real* c2.imag + imag*c2.imag;
        return temp;
    }
};

int main(){
    complex c1, c2, c3, c4 ;
    int flag = 1;
    char b;
    while(flag == 1){
        cout<<"Enter real and imaginary part of complex number 1: "<<endl;
        cin>>c1;

        cout<<"Enter real and imaginary part of complex number 2: "<<endl;
        cin>>c2;

        int f = 1;
        while( f == 1 ){
            cout<<"complex number 1 : "<<c1<<endl;
            cout<<"complex number 2 : "<<c2<<endl;
            cout<<"**menu**" << endl;
            cout<<"1. Addition of Complex Numbers"<<endl;
            cout<<"2. Multiplication of complex numbers"<<endl;
            cout<<"3. Exit\n";

            int a;
            cout<<"enter your choice.."<<endl;
            cin>>a;
            if( a == 1){
                c3 = c1 + c2;
                cout<<"Addition : "<<c3<<endl;

                cout<<"Do you want to perform another operation ? (y/n) : ";
                cin>>b;
                if ( b == 'y'|| b == 'Y'){
                    f=1;
                }
                else{
                    flag = 0;
                    f = 0;
                }

            }
            else if ( a ==2 ){
                c4 = c1 * c2 ;
                cout<<"Multiplication : "<<c4<<endl;
                
                cout<<"Do you want to perform another operation? (y/n) : ";
                cin>>b;
                if ( b == 'y'|| b == 'Y'){
                    f=1;
                }
                else{
                    flag = 0;
                    f = 0;
                }
                
            }
            else{
                flag = 0;
                f=0;
            }
        }
    }
    return 0;
}
