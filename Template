#include<iostream>
using namespace std;
template<typename T>
void sort (T a[], int len){
    int i, j, min;
    T temp;
    for(i=0; i<len; i++){
        min = i;
        for(int j=i+1; j<len; j++){
            if(a[j]<a[min]){
                min = j;
            }
        }
        temp = a[i];
        a[i] = a[min];
        a[min] = temp;
    }
    cout<<"sorted array: "<<endl;
    for(i=0; i<len ; i++){
        cout<<" "<<a[i];
    }
}

int main(){
    int i,n;
    cout<<"\nEnter total no of int elements : ";
    cin>>n;
    int a[n];
    cout<<"\nEnter all int elements: ";
    for(i=0; i<n; i++){
        cin>>a[i];
    }
    sort(a,n);

    cout<<"\nEnter total no of float elements: ";
    cin>>n;
    float b[n];
    cout<<"\nEnter flaot elements: ";
    for(i=0; i<n; i++){
        cin>>b[i];
    } 
    sort(b,n);
}
